<h2>Login</h2>

<form method="post" action="/login">
	<div class="field">
		<label for="login">Login</label><br/>
		<input type="text" id="login" name="login" size="30" placeholder="Ingrese Login"/>
	</div>
	<div class="field">
		<label for="password">Password</label><br/>
		<input type="password" id="password" name="password" size="30" placeholder="Ingrese Password"/>
	</div>
	<div class="actions">	
  		<input name="commit" type="submit" value="Login"/>
  	</div>	
</form>		